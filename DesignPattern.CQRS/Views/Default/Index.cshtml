@using DesignPattern.CQRS.CQRSPattern.Results;
@model List<GetProductQueryResult>
@{
    ViewData["Title"] = "Index";
}

<div class="container">
    <br />
    <table class="table table-hover">
        <tr>
            <th>#</th>
            <th>Ürün Adı</th>
            <th>Fiyat</th>
            <th>Stok</th>
            <th></th>

        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ID</td>
                <td>@item.ProductName</td>
                <td>@item.Price</td>
                <td>@item.Stock</td>
                <td>
                    <a asp-action="DeleteProduct" asp-route-id="@item.ID" class="btn btn-outline-danger">Sil</a>
                    <a asp-action="UpdateProduct" asp-route-id="@item.ID" class="btn btn-outline-primary">Düzenle</a>
                    <a asp-action="GetProduct" asp-route-id="@item.ID" class="btn btn-outline-info">Getir</a>
                </td>
            </tr>
        }
    </table>
</div>

<br />
<a href="/Default/AddProduct" class="btn btn-outline-dark">Yeni Ürün Ekle</a>